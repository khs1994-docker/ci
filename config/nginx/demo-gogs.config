upstream git {
  server gogs-server:3000;
}

server {
    listen               443 ssl;
    server_name          git.{{ CI_DOMAIN }};
    ssl_certificate      conf.d/ssl/git.{{ CI_DOMAIN }}.crt;
    ssl_certificate_key  conf.d/ssl/git.{{ CI_DOMAIN }}.key;
    ssl_protocols        TLSv1.2;
    ssl_session_cache    shared:SSL:1m;
    ssl_session_timeout  5m;
    ssl_prefer_server_ciphers  on;

    location / {
        proxy_pass https://git;
    }
}
